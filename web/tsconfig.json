{
  "version": "3.0.3",
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "removeComments": true,
    "noImplicitAny": false,
    "outDir": "./out",
    "sourceMap": true,
    "alwaysStrict": true,
    "declaration": true,
    "skipLibCheck": true,
    "types": [],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "noEmit": false,
  },
  "types": [
    "codeflask",
    "jest"
  ],
  "include": [
    "src/**/*.ts",
    "src/ui/vrbutton.ts", "src/ui/orbitcontrol.js",
  ],
  "exclude": [
    "./out.d.ts",
    "./node_modules/*"
  ]
}